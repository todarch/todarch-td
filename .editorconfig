# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8

[*.java]
indent_style = space
indent_size = 2

# idea specific, method chain indentation
# https://youtrack.jetbrains.com/issue/IDEA-145069
continuation_indent_size = 4

# 4 space indentation
[*.xml]
indent_style = space
indent_size = 4
